<article id="page-{{ page.id }}" class="singular">

	{# Header #}
	<header class="singular__header">
		{# Breadcrumbs #}
		{% if fn('function_exists', 'yoast_breadcrumb') %}
			{{ fn('yoast_breadcrumb','<p id="breadcrumbs">','</p>') }}
		{% endif %}
	</header>

	{# Content #}
	<div class="singular__content">
		<div class="is-layout-flow wp-block-group has-max-width-sm has-font-serif text--md has-line-height--base">
			<h1> {{ page.title }}</h1>
			{{ privacy_policy }}
		</div>
	</div>

</article>

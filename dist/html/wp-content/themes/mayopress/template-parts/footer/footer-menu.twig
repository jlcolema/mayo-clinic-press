{% if footer_menu %}
{% for item in footer_menu.items %}
  <div class="wp-block-column">
    <div class="accordion js-accordion" data-animation="on" data-component="accordion" data-mobile-accordion="">
      <div class="accordion__item js-accordion__item">
        <div class="footer-nav__heading accordion__header reset js-accordion__trigger js-tab-focus has-heading-md-font-size">
          {{ item.title|e('esc_html') }}
        </div>

        {% if item.children %}
        <div class="accordion__panel js-accordion__panel">
          <div class="accordion__panel-content">
            <nav label="{{ item.title|e('esc_html') }}" aria-label="{{ item.title|e('esc_html') }} Navigation">
              <ul>
							{% for child in item.children %}
                <li>
                  <a href="{{ child.link|e('esc_url') }}"{% if child.title|e('esc_html') == 'MayoClinic.org' %} target="_blank" rel="noopener"{% endif %}>
                    {{ child.title|e('esc_html') }}
                  </a>
                </li>
              {% endfor %}
              </ul>
            </nav>
          </div>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endfor %}
{% endif %}
